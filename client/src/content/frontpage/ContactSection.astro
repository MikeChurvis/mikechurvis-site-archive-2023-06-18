---
import SectionLayout from '@layout:SectionLayout.astro';
import ContactForm from '@component:contact-form/ContactFormWrapper.vue';

const { CONTACT_FORM_API_ROOT_URL = "http://localhost:8000" } = import.meta.env
---


<SectionLayout title="Contact Me" id="contact">
  <div class="row justify-content-center">
  
    <div class="col-12 col-lg-3 mb-2">
      <h2 class="text-primary">
        Let's Connect!
      </h2>
      <p>
        I'd love to answer any questions you have.
      </p>
    </div>

    <div class="col-12 col-lg-9">
      <ContactForm client:only apiRootUrl={ CONTACT_FORM_API_ROOT_URL } />
    </div>

  </div>
</SectionLayout>