{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@image:*": [
        "src/images/*"
      ],
      "@component:*": [
        "src/components/*"
      ],
      "@script:*": [
        "src/scripts/*"
      ],
      "@style:*": [
        "src/styles/*"
      ],
      "@content:*": [
        "src/content/*"
      ],
      "@layout:*": [
        "src/layouts/*"
      ],
    },
  },
}